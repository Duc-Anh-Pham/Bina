@model IEnumerable<Bina.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Articles Deadline</h1>
    <p class="text-end mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Articles Name</th>
                    <th>Title </th>
                    <th>Faculty</th>
                    <th>Start Due</th>
                    <th>Due Date</th>
                    <th> Academic Year</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticleName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FacultyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticlesDeadline.StartDue)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ArticlesDeadline.DueDate)</td>

                        <td>@Html.DisplayFor(modelItem => item.ArticlesDeadline.AcademicYear)</td>

                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a asp-action="Edit" asp-route-id="@item.ArticleId" class="btn btn-primary btn-sm" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ArticleId" class="btn btn-success btn-sm" title="Detail">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ArticleId" class="btn btn-danger btn-sm" title="Delete">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
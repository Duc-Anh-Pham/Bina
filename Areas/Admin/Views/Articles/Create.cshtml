@model Bina.Models.Article

@{
    ViewData["Title"] = "Create";
}



<h1>Create Article</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ArticleName" class="control-label"></label>
                <input asp-for="ArticleName" class="form-control" />
                <span asp-validation-for="ArticleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label">Faculty ID</label>
                <select asp-for="FacultyId" class="form-control" asp-items="@ViewBag.FacultyId"></select>
            </div>



            <div class="form-group">
                <label for="startDue" class="control-label">Start Due</label>
                <input type="datetime" id="startDue" name="startDue" class="form-control" />
            </div>

            <div class="form-group">
                <label for="dueDate" class="control-label">Due Date</label>
                <input type="datetime" id="dueDate" name="dueDate" class="form-control" />
            </div>

            <div class="form-group">
                <label for="academicYear" class="control-label">Academic Year</label>
                <input type="int" id="academicYear" name="academicYear" class="form-control" />
            </div>

            </br>
            <div class="form-group d-flex">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

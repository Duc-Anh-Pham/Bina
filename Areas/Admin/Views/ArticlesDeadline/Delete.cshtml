@model Bina.Models.ArticlesDeadline

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Delete Article Deadline</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            Term Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TermName)
                        </dd>

                        <dt class="col-sm-2">
                            Title
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TermTitle)
                        </dd>

                        <dt class="col-sm-2">
                            Faculty ID
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FacultyId)
                        </dd>

                        <dt class="col-sm-2">
                            Start Due
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.StartDue)
                        </dd>

                        <dt class="col-sm-2">
                            Due Date
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DueDate)
                        </dd>

                        <dt class="col-sm-2">
                            Academic Year
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AcademicYear)
                        </dd>

                        </br>
                        <div class="form-group text-center">
                            <button class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </dl>
                </div>
                <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this user?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ArticlesDeadlineId" />
                                    <button type="submit" class="btn btn-danger">Yes</button>
                                </form>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>

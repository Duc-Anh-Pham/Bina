@model Bina.Models.Article

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">Articles Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Article Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleName)
        </dd>

        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            Faculty ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacultyId)
        </dd>

        <dt class="col-sm-2">
            Start Due
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticlesDeadline.StartDue)
        </dd>

        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticlesDeadline.DueDate)
        </dd>
        <dt class="col-sm-2">
            Academic Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticlesDeadline.AcademicYear)
        </dd>
    </dl>
</div>
</br>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArticleId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
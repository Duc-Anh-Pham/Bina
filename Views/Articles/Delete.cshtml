@model Bina.Models.Article

@{
    ViewData["Title"] = "Delete Article";
}

<div class="container">
    <h1 class="mt-5">@ViewData["Title"]</h1>
    <div class="bg-light p-5 rounded">
        <h3>Are you sure you want to delete this article?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArticleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArticleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArticleStatus.ArticleStatusName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArticleStatus.ArticleStatusName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArticlesDeadline.DueDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArticlesDeadline.DueDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Faculty.FacultyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Faculty.FacultyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <!-- Nếu có thêm thông tin khác bạn cần hiển thị, hãy thêm vào đây -->
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ArticleId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>

    </div>
</div>
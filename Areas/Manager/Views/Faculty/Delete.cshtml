@model Bina.Models.ViewModels

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
<h1 class="text-center mb-4">Delete Faculty</h1>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            Faculty ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacultyId)
        </dd>
        <dt class="col-sm-2">
            Faculty Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacultyName)
        </dd>
        <dt class="col-sm-2">
            Established
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Established)
        </dd>
        <dt class="col-sm-2">
            Coordinator
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoordinatorUserName)
        </dd>

        </br>
        <div class="form-group text-center">
            <button class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </dl>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="FacultyId" />
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>